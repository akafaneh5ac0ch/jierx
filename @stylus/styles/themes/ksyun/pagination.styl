.k-pagination
    .k-pages
        > div:hover
            position relative
            z-index 1
        .k-ellipsis
            border none
        .ion-ios-arrow-left:before
            content "\f361"
            font-size 22px
        .ion-ios-arrow-right:before
            content "\f363"
            font-size 22px
    &.k-mini
        .k-pages
            .ion-ios-arrow-left:before
            .ion-ios-arrow-right:before
                font-size 18px

