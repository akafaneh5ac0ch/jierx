$color = #0091ea
$h = hsvhue($color)
$s = hsvsaturation($color)
$b = hsvvalue($color)
if $s <= 10% 
    $deS = 0
else
    $deS = ($s - 10%) / 4
$inS = (100% - $s) / 4
$deB = (100% - $b) / 4
if $b <= 40%
    $inB = 0
else 
    $inB = ($b - 40%) / 4

.design-page
    .content-wrapper
        padding-left 20px
    .color
        width 100px
        height 100px
        float left
        H $h
        S $s
        B $b
        DS $deS
        IS $inS
        DB $deB
        IB $inB
    for num in (0..4)
        .color{4 - num}
            background hsv($h - num, $s - num * $deS, $b + num * $deB)
            // background hsv($h, $s - num * $deS, $b + num * $deB)
            &:before
                content s('"%s\D\A %s %s %s"', hsv($h - num, $s - num * $deS, $b + num * $deB), $h - num, $s - num * $deS, $b + num * $deB)
