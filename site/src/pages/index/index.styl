.index-dot
    width 20px
    position fixed
    right 20px
    top 50%
    z-index 999
    li
        cursor pointer
        width 12px
        height 12px
        border-radius 12px
        background-color #EEEEEE
        margin-bottom 14px
    .dot-active
        background-color #B2B2B2 !important


