.blog-page
    padding-bottom 10px
    padding-top 60px
    .content-wrapper
        box-shadow none
        flex-direction row-reverse
        //width 1080px
        aside
            position absolute
            left 20px
            width 15% //250px
            border none
            background #eee
        article
            margin-left 22%
            background-color #f1f1f5
            box-shadow 0 1px 1px rgba(0, 0, 0, 0.08)
        .aside-wrapper
            margin 30px
        &.fixed
            .aside-wrapper
                margin-right -999px
                padding-right 999px
                background none
                width auto
                height s("calc(100% - 125px)")
        .aside-border
            height 30px

.aside-nav
    width 200px
    //border 1px solid red
    position fixed
    float left
    left 30px
    display inline-block
    .aside-nav-line
        height 100%
        border-right 1px solid #B2B2B2
        position absolute
    ul
        padding-left 20px

.aside-nav-dot-2:before
    content ''
    position absolute
    width 12px
    height 12px
    border-radius 12px
    margin-top 5px
    border 1px solid #CCCCCC
    left -6.5px
    background-color #CCCCCC

.aside-nav-dot-3:before
    content ''
    position absolute
    width 8px
    height 8px
    border-radius 8px
    margin-top 5px
    border 1px solid #CCCCCC
    left -4.5px
    background-color #CCCCCC

dot-active-2
    //color red
