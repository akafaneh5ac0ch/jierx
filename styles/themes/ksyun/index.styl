use('../../functions.js')
$theme-dir := __dirname()

// we must require other file after defined $theme-dir
// otherwise, the __dirname may be weird
@require('../../mixin.styl')

$primary-color := #0091ea
$warning-color := #ffad33
$danger-color := #ff4133
$success-color := #36b342
$disabled-color := #ccc
$disabled-bg-color := #f2f2f2
$disabled-border-color := #ccc
$text-color := #404040
$ghost-text-color := #737373
$border-color := #ccc
$bg-color := #f1f1f5
$title-color := #262626
$dark-border-color := #999
$placeholder-color := #b2b2b2

$box-shadow := 0 0 4px 0 rgba(0, 0, 0, .3)


/**
 * size
 */
$large-height := 40
$large-font-size := 14px
$default-height := 32 
$default-font-size := 12px
$small-height := 24 
$small-font-size := 12px
$mini-height := 16 
$mini-font-size := 12px


/**
 * btn
 */
$btn-color := $ghost-text-color 
// type
$btn-primary-border-color := palette($primary-color, 1) 
$btn-warning-border-color := palette($warning-color, 1)
$btn-danger-border-color := palette($danger-color, 1)
$btn-success-border-color := palette($success-color, 1)
$btn-active-color := $primary-color
$btn-active-border-color := $primary-color
$btn-active-bg-color := palette($primary-color, -4)
// size
$btn-large-padding := 0 24px 
$btn-padding := 0 16px 
$btn-small-padding := 0 8px 
$btn-mini-padding := 0 8px 


/**
 * radio
 */
$radio-width := 14px
$radio-inner-width := 8px
$radio-disabled-inner-color := $disabled-border-color


/**
 * checkbox
 */
$checkbox-inner-border := 1px solid #fff
$checkbox-inner-width := 5px
$checkbox-inner-height := 10px
$checkbox-inner-top := -1px 
$checkbox-disabled-inner-color := $disabled-border-color

/**
 * switch
 */
$switch-bg-color := #fff
$switch-checked-bg-color := #fff
$switch-color := $text-color
$switch-handle-bg-color := $border-color
$switch-handle-border-radius := $border-radius
// size
$switch-default-width := 52px
$switch-default-height := 16px
$switch-default-border-radius := $border-radius
$switch-default-padding := 3px
$switch-large-border-radius := $border-radius
$switch-small-border-radius := $border-radius
$switch-small-height := 14px
$switch-small-padding := 2px
$switch-mini-border-radius := $border-radius
$switch-mini-padding := 2px
// disabled
$switch-disabled-bg-color := #fff


/**
 * input
 */
$input-padding := 0 16px 
$input-group-bg-color := $bg-color
$input-group-padding-horizontal := unit(16 / 14, em)
$input-prefix-padding := 48px
$input-suffix-padding := 48px


/**
 * select
 */
$select-width := 300px
$select-padding-right := 38px
$select-padding-left := 16px
$select-multiple-values-margin := 4px
$select-multiple-tag-padding := 0 5px
$select-multiple-tag-margin := 0 2px 3px 0
$select-large-font-size := 14px
// $select-font-size := 12px


/**
 * dialog
 */
$dialog-width := 770px
$dialog-padding := 0
$dialog-font-size := 12px
$dialog-title-height := 61px
$dialog-title-font-size := 16px
$dialog-title-border := 1px solid #eaeaea
$dialog-close-top := 16px
$dialog-close-right := -9px
$dialog-close-icon-font-size := 44px
$dialog-body-padding := 20px
$dialog-footer-padding := 20px 0
$dialog-small-width := 390px


/**
 * table
 */
$table-border-color := $border-color
$table-thead-bg-color := $bg-color
$table-th-padding := 0 5px 0 12px
$table-thead-font-size := 12px
$table-th-font-weight := bold
$table-thead-color := #3b3b3b
$table-tr-hover-bg-color := $bg-color
$table-border-thead-bg-color := $table-thead-bg-color
$table-fixed-margin-top := -33px
$table-check-width := 40px

/**
 * slider
 */
$slider-height := 20px
$slider-bg-color := #ededed
$slider-border-radius := 0
$slider-bar-color := #94cdf9
$slider-handle-height := 26px
$slider-handle-width := 16px
$slider-handle-border := none
$slider-handle-bg-color := $primary-color
$slider-handle-border-radius := 0
$slider-handle-hover-transform := none
$slider-handle-hover-bg-color := $primary-color
$slider-handle-disabled-bg-color := $disabled-bg-color


/**
 * message
 */
$message-content-padding := 9px 48px 9px 15px
$message-close-font-size := 26px


/**
 * tooltip
 */
$tooltip-padding := 8px 12px
$tooltip-color := $text-color
$tooltip-arrow-border-color := rgba(191, 191, 191, .5)


/**
 * pagination
 */
$pagination-btn-border-radius := 0
$pagination-btn-margin-right := 0
$pagination-small-btn-margin-right := 0


/**
 * steps
 */
$steps-main-title-font-weight := normal
$steps-main-color := $text-color
$steps-tail-bg-color := transparent
$steps-done-tail-bg-color := transparent
$steps-active-head-inner-border-color := $warning-color
$steps-active-head-inner-bg-color := $warning-color


/**
 * tabs
 */
$tabs-height := unit($default-height, px)
$tabs-padding := 0 16px
