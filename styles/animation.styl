@keyframes rotate
    0%
        transform-origin 50% 50%
        transform rotate(0)
    100%
        transform-origin 50% 50%
        transform rotate(360deg)

.fade-enter
.fade-leave
    opacity 0
.fade-enter-active
.fade-leave-active
    transition opacity $transition 
.fade-move
    transition transform $transition

$origins = {
    down: center top 0,
    up: center bottom 0,
    left: right center 0,
    right: left center 0
}
for type, value in $origins
    .slide{type}-enter
    .slide{type}-leave
        opacity 0
        transform scaleY(.8)
    .slide{type}-enter-active
    .slide{type}-leave-active
        transform-origin value 
        transition opacity $transition, transform $transition
