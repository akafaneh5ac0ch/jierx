import Item from './item';
import {mapChildren} from '../utils';

const {children, className, style, _isSubMenu, _root} = self.get();

const classNameObj = {
    'k-menu': true,
    [className]: className,
};

<div class={{ classNameObj }} style={{ style }}>
    {{ mapChildren(children, vNode => {
        if (vNode.tag === Item) {
            return h(Item, {...vNode.props, _root: _root || self});
        }
        return vNode;
    }) }}
</div>
