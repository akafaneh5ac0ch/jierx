let {children, trigger} = self.get();

if (Array.isArray(children)) {
    children = children[0];
}
const props = children.props;

switch (trigger) {
    case 'click':
        props['ev-click'] = self.show.bind(self, props._evClick);
        break;
    default:
        props['ev-mouseenter'] = self.show.bind(self, props._evEnter);
        props['ev-mouseleave'] = self.hide.bind(self, props._evLeave);
}

function Wrapper() {
    return children;
}

<Wrapper />
