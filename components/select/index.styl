@require('./variables.styl');

.k-select
    width 200px
    display inline-block
    height 32px
    border 1px solid #d9d9d9
    cursor pointer
    .k-select-input
        font-size $select-input-font
        padding $select-padding
        height 100%
    .k-icon
        border-left 5px solid transparent
        border-right 5px solid transparent
        border-top 5px solid #595959
        margin-top $select-arrow-m-t
        float right
    .k-select-dropdown
        .animate-enter
        .animate-leave 
            opacity 0
            transform translateY(-1px)
        .animate-enter-active
        .animate-leave-active 
            transition: all 0.4s
        .k-select-list
            border 1px solid #d9d9d9
            li
                padding $select-li-margin
                border-top 0px 
                &:hover    
                    background #f8f8f9
    