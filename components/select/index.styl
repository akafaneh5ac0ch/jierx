        position absolute
        right $select-input-font :=unit(14/14, rem) 
        top 0rem
        margin-right $select-icon-clear-m-r
        &:hover      
            color $selected-status 
    .k-multiple
        display inline-block
        max-width $select-max-width
        .input-tag-checked
            display inline-block
            height $select-tag-checked-height
            line-height $select-tag-checked-height
