@require('./variables.styl')

.k-upload
    font-size 12px
    .k-handle
    .k-tip
        display inline-block
        vertical-align middle
    .k-tip
        margin-left 16px
        color $light-black
    .k-close
        display none
        .k-icon:before
            font-size 24px
    .k-files
        margin-top 16px
    .k-file
        margin 4px 0 
        border-radius $border-radius
        cursor default
        &:hover
            background $bg-color
            .k-icons
                .k-close
                    display inline-block
        > .k-wrapper
            padding 4px
        .k-icons
            position absolute
            top 1px
            right 0
        .k-status-icon
            color $success-color
            margin-left 8px
            float right
            line-height 16px
        &.k-error
            color $danger-color
            .k-status-icon
                color $danger-color

    .k-name
        position relative
        padding-right 40px
        .k-file-icon 
            vertical-align middle
            margin-right 8px
    .k-progress
        .k-text
            width auto

    // drag
    &.k-drag
        .k-handle
            color $light-black
            display block
            border 1px dashed $border-color
            border-radius $border-radius
            cursor pointer
            text-align center
            transition border-color $transition
            &:hover
                border-color $primary-color
        .k-area
            padding 20px 0 40px 0
            .k-icon:before
                font-size 80px
                color #b2b2b2
                line-height 1
        &.k-dragover
            .k-handle
                border-color $primary-color

    // gallery
    .k-pictures
        display inline-block
        vertical-align middle
        .k-picture
            padding 8px
            position relative
            vertical-align middle
            &.k-error
                border-color $danger-color
            &:hover
                .k-close
                    display inline-block
        img
            display inline-block
            width 100%
            height 100%
        .k-close
            position absolute
            top -8px
            right -8px
            .k-icon:before
                font-size 18px
    .k-picture-card
        display inline-block
        width 100px
        height 100px
        border-radius $border-radius
        border 1px solid $border-color
        text-align center
        cursor pointer
        margin 0 8px 8px 0
        background #fff
    .k-add
        border 1px dashed $border-color
        &:before
            font-size 44px
            line-height 98px
        &:hover
            border-color $primary-color
    .k-overlap
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        background rgba(0, 0, 0, .35)
        color #fff
        .k-progress
            position absolute
            width 100%
            padding 0 8px
            top 50%
            margin-top -8px
