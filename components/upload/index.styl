@require('./variables.styl')

.k-upload
    font-size 12px
    .k-handle
    .k-tip
        display inline-block
        vertical-align middle
    .k-tip
        margin-left 16px
        color $light-black
    .k-files
        margin-top 16px
    .k-file
        margin 4px 0 
        border-radius $border-radius
        cursor default
        &:hover
            background $bg-color
            .k-icons
                .k-close
                    display inline-block
        > .k-wrapper
            padding 4px
        .k-icons
            position absolute
            top 1px
            right 0
        .k-status-icon
            color $success-color
            margin-left 8px
            float right
            line-height 16px
        .k-close
            display none
            .k-icon:before
                font-size 24px
        &.k-error
            color $danger-color
            .k-status-icon
                color $danger-color

    .k-name
        position relative
        padding-right 40px
        .k-file-icon 
            vertical-align middle
            margin-right 8px
    .k-progress
        .k-text
            width auto

    // drag
    &.k-drag
        .k-handle
            color $light-black
            display block
            border 1px dashed $border-color
            border-radius $border-radius
            cursor pointer
            text-align center
            transition border-color $transition
            &:hover
                border-color $primary-color
        &.k-dragover
            .k-handle
                border-color $primary-color
