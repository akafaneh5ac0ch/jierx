let {
    className, children, text, disabled,
    max, key, ref, ...rest
} = self.get();

if (typeof text === 'number' && max && text > max) {
    text = `${max}+`;
}

const classNameObj = {
    'k-badge': true,
    [className]: className,
    'k-has-text': text != null,
    'k-alone': !children,
};

<div {{ ...rest }} class={{ classNameObj }}>
    {{ children }}
    <sup class="k-text" v-if={{ !disabled }}>{{ text }}</sup>
</div>
