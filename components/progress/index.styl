@require('./variables.styl')
@require('../../styles/mixin.styl')

sizes = mini small default

.k-progress
    position relative
    line-height 1
    .k-bar
        padding-right $progress-padding-right
        display inline-block
        vertical-align middle
        width: 100%
        margin-right $progress-margin-right
        box-sizing border-box
        .k-container
            height $progress-height
            border-radius 100px
            background-color $progress-bgcolor
            overflow hidden
            position relative
            vertical-align middle
            font-size $progress-innertext-font-size
            .k-content
                position relative
                left 0
                top 0
                background-color $progress-bgcolor
                white-space nowrap
                width 100%
                height 100%
                border-radius 100px
                .k-bg
                    background-color $progress-content-bgcolor
                    height 100%
                    border-radius 100px
                    transition all 0.2s linear
                .k-success
                    background-color $progress-bgcolor-success
                .k-error
                    background-color $progress-bgcolor-error
                .k-innerText
                    display inline-block
                    vertical-align middle
                    color #ffffff
                    margin $progress-innertext-margin
                    width 100%
                    text-align right
                    padding-right 10px
        .k-mini
            height  $progress-mini-height
            font-size $progress-mini-font-size
        .k-small
            height $progress-small-height
            font-size $progress-small-font-size
    &.k-circle
        //.k-circle-default
        //    height 120px
        //    width 120px
        for size in sizes
            .k-{size}
                height lookup('$progress-' + size + '-circle')
                width lookup('$progress-' + size + '-circle')

    .k-text
        display inline-block
        margin-left 15px
        line-height 1
        vertical-align middle
        color $progress-font-color


