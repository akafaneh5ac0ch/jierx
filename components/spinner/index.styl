@require('./variables.styl');

.k-spinner
    display inline-block
    button
        color $spinner-button-color
        font-weight 200
        border 1px solid $spinner-button-border-color
        background-color $spinner-button-bg-color
        outline 0
        height 32px
        width 34px
        float left
        cursor pointer
        &:not(.btn-left-disabled):not(.btn-right-disabled):hover
            border-color $spinner-button-hover-border-color
            color $spinner-button-hover-color
            background-color $spinner-button-hover-bg-color
    input
        background-color $spinner-input-bg-color
        border 1px solid $spinner-input-border-color
        height 32px
        width 46px
        text-align center
        float left
        margin 0
        border-left none
        border-right none
        outline 0
        padding 0

    // disabled
    .btn-right-disabled
        background-color $spinner-button-disabled-bg-color
        border-color $spinner-button-disabled-border-color
        color $spinner-button-disabled-color
        cursor not-allowed
    .btn-left-disabled
        background-color $spinner-button-disabled-bg-color
        border-color $spinner-button-disabled-border-color
        color $spinner-button-disabled-color
        cursor not-allowed

