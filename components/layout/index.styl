@require('./variables.styl')

.k-layout
    display flex
    flex-direction column
    flex 1
    &.k-has-aside
        flex-direction row
        .k-layout
            > .k-header
                background #fff
                border-bottom 1px solid $border-color
    > .k-header
        height $layout-header-height 
        line-height @height 
        background $layout-header-bg-color
        .k-menu
            .k-menu-item
                vertical-align top
                > .k-title
                    height auto
                    line-height inherit
    > .k-aside
        background $layout-header-bg-color
        transition all $transition
        width 200px
        display flex
        // fixed
        &.k-fixed
            position fixed
            height calc(100vh - $layout-header-height)
            overflow hidden
            > .k-wrapper
                height 100%
                overflow auto
                margin-right -15px
                > .k-menu
                    min-height 100%

    > .k-footer
        padding 24px 50px
    > .k-body
        flex 1
        margin 0 20px
