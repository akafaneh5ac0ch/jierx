@require('./variables.styl')

.k-tabs
    border-bottom $tabs-border-bottom
    .k-tab
        height $tabs-height 
        line-height s('calc(%s - 2px)', @height)
        padding $tabs-padding 
        margin $tabs-margin 
        cursor pointer
        display inline-block
        text-align center
        color $tabs-color 
        position relative
        vertical-align middle
        &.k-active
            color $tabs-active-color 
            &:after
                content ''
                display block
                position absolute
                left 0
                height $tabs-highlight-height 
                width 100%
                background $tabs-highlight-bg-color 
                margin-left $tabs-highlight-margin-left 
                bottom $tabs-highlight-bottom 
        &.k-vertical
            display block
            &:before
                border-left 4px solid #0091ea
                height calc(100% + 1px)
                right unset
                border-top 0px !important
            &:after
                height 0 
$dir = $theme-dir + '/tabs.styl';
@import $dir if exists($dir) 
