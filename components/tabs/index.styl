@require('./variables.styl')
sizes = large small mini

.k-tabs
    border-bottom $tabs-border-bottom
    .k-tab
        height $tabs-height 
        line-height s('calc(%s - 2px)', @height)
        padding $tabs-padding 
        margin $tabs-margin 
        cursor pointer
        display inline-block
        text-align center
        color $tabs-color 
        position relative
        vertical-align middle
        &.k-active
            color $tabs-active-color 
            &:after
                content ''
                display block
                position absolute
                left 0
                height $tabs-highlight-height 
                width 100%
                background $tabs-highlight-bg-color 
                bottom $tabs-highlight-bottom 

    // vertical
    &.k-vertical
        display inline-block
        border-bottom none
        border-right $tabs-border-bottom
        .k-tab
            display block
            margin 0
            padding $tabs-vertical-padding
            &.k-active
                &:after
                    left auto
                    right $tabs-highlight-bottom 
                    width $tabs-highlight-height
                    top 0
                    bottom 0
                    height auto

    // size
    for size in sizes 
        &.k-{size}
            .k-tab
                font-size lookup('$tab-' + size + '-font-size')
                height lookup('$tab-' + size + '-height')
                line-height s('calc(%s - 2px)', @height)
                padding lookup('$tab-' + size + '-padding')

$dir = $theme-dir + '/tabs.styl';
@import $dir if exists($dir) 
