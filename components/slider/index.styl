@require('./variables.styl')

sizes = small mini

.k-slider
    position relative
    display flex
    .k-wrapper
        height $slider-height
        background-color $slider-color
        border-radius $slider-height
        cursor pointer
        position relative
        display inline-block
        flex 1
        margin-right $slider-margin
        .k-bar
            background-color $slider-bar-color
            position absolute
            height $slider-height
            border-radius $slider-height
        .k-button-wrapper
            height $slider-button-height
            width @height
            position absolute
            transform translateX(-50%)
            top $slider-button-top
            text-align center
            .k-button
                width 100%
                height 100%
                border 2px solid $slider-bar-color
                border-radius 50%
                background-color #fff
                transition all 0.2s linear
            .k-text
                width 100%
                height 100%
                top $slider-button-top
                position absolute
                color $slider-bar-color
        .k-box
            position absolute
            top $slider-height
            padding $slider-box-padding
            width 100%
            :last-child
                float right
    &.k-slider-input
        .k-input-wrapper
            float right
            margin-top -0.75rem









