@require('../../styles/themes/default.styl')

$dialog-width := 670px
$dialog-bg-color := #fff
$dialog-border-radius := 2px
$dialog-padding := unit(30 / 14, rem)
$dialog-color := $text-color
$dialog-font-size := unit(12 / 14, rem)

// header
$dialog-title-font-size := 1rem
$dialog-title-color := $title-color 
$dialog-title-height := unit(60 / 14, em)
$dialog-title-border := 1px solid $border-color
$dialog-close-top := 10px
$dialog-close-right := 5px

// body
$dialog-body-padding := unit(18 / 14, rem) $dialog-padding

// footer
$dialog-footer-padding := unit(24 / 14, rem) $dialog-padding
$dialog-footer-btn-margin := unit(12 / 14, rem)

// animation
$dialog-transform := translateY(-10px) scale(1.05)

// mini size
$dialog-small-width := 450px


